#include<iostream>
using namespace std;

void create(int *r,int n)
{
    cout<<"enter elements of array : "<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>r[i];
    }
}
void lin(int *r,int n,int x)
{
    for(int i=0;i<n;i++)
    {
        if(r[i]==x)
        {
            cout<<"key found after "<<i+1 <<"comparisons";
            return;
        }
        
    }
    cout<<"key not found";
}

void binary_search(int *r,int n,int x)
{
    int low=0,i=1;
    int high=n;
    int mid=(low+high)/2;
    while(low<=high)
    {
        if(x==r[mid])
        {
            cout<<"key found after "<<i<<" comparisons"<<endl;
            return;
        }
        else if(x<r[mid])
        {
            high=mid
        }
        else
        {
            low=mid;
        }
        mid=(low+high)/2;
        i++;
    }
    cout<<"key not found \n";
}
int main()
{
    int size,*p,key,n,i=0;
    cout<<"enter size of array: ";
    cin>>size;
    
    p= new int[size];
    
    create(p,size);
    cout<<"enter the key to search : ";
    cin>>key;
    binary_search(p,size,key);
    return 0;
}
