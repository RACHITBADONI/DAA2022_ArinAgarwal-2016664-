#include<iostream>
using namespace std;

void create(int *r,int n)
{
    cout<<"enter elements of array : "<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>r[i];
    }
}
void lin(int *r,int n,int x)
{
    for(int i=0;i<n;i++)
    {
        if(r[i]==x)
        {
            cout<<"key found after "<<i+1 <<"comparisons";
            return;
        }
        
    }
    cout<<"key not found";
}

int main()
{
    int size,*p,key,n,i=0;
    cout<<"enter the no of arrays you want to search ";
    cin>>n;
    
    while(i<n)
    {
    cout<<"enter size of array: ";
    cin>>size;
    
    p= new int[size];
    
    create(p,size);
    cout<<"enter the key to search : ";
    cin>>key;
    lin(p,size,key);
    i++;
    }
    return 0;
}
