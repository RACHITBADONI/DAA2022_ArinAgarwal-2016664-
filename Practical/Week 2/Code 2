#include<bits/stdc++.h>
using namespace std;

void create(int *p,int n)
{
    cout<<"enter elements in sorted array : ";
    for(int i=0;i<n;i++)
    {
        cin>>p[i];
    }
}

void find(int *p,int n)
{
    vector<int>v;
    for(int i=0;i<n-2;i++)
    {
        for(int j=1;j<n-1;j++)
        {
            for(int k=2;k<n;k++)
            {
                if(p[i]+p[j]==p[k])
                {
                    cout<<i<<" "<<j<<" "<<k<<endl;
                }

            }
        }
    }
}

int main()
{
    int size;

    cout<<"enter size of array : ";
    cin>>size;
    int *p=new int[size];

    create(p,size);
    find(p,size);
    return 0;
}
