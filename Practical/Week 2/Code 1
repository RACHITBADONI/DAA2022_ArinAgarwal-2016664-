#include<iostream>
using namespace std;

void create(int *p,int n)
{
    cout<<"enter elementas in sorted array : ";
    for(int i=0;i<n;i++)
    {
        cin>>p[i];
    }
}

int find(int *p,int n)
{
    int key;
    cout<<"enter value to search : ";
    cin>>key;
    int c=0;
    
    for(int i=0;i<n;i++)
    {
        if(p[i]==key)
        c++;
        else if(p[i]>key)
        break;
    }
    return -1;
}

int main()
{
    int size;
    cout<<"enter size of array : ";
    cin>>size;
    int *p=new int[size];
    
    create(p,size);
    int c=find(p,size);
    cout<<"key is value "<<c;
    return 0;
}
