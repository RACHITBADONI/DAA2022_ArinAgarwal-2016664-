#include<bits/stdc++.h>
using namespace std;

void create(int *p,int n)
{
    cout<<"enter elements in sorted array : ";
    for(int i=0;i<n;i++)
    {
        cin>>p[i];
    }
}

int find(int *p,int n)
{
    int key;
    cout<<"enter key : ";
    cin>>key;
    int c=0;
    for(int i=0;i<n-1;i++)
    {
        for(int j=1;j<n;j++)
        {
            if(p[j]>=p[i])
            {
                if(p[j]-p[i]==key)
                {
                    c++;
                }
            }
            else
            {
                if(p[i]-p[j]==key)
                {
                    c++;
                }
            }

        }
    }
    return c;
}

int main()
{
    int size;

    cout<<"enter size of array : ";
    cin>>size;
    int *p=new int[size];

    create(p,size);
    int c=find(p,size);
    cout<<c;
    return 0;
}
